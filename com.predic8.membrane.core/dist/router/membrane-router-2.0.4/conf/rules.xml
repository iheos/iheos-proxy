<?xml version = "1.0" ?>
<configuration>
  <rules>
    <forwarding-rule name="localcap"
                      port="8001"
                      blockRequest="false"
                      blockResponse="false"
                      inboundTLS="false"
                      outboundTLS="false"
                      host="localhost"
                      method="*">
      <targetport>12090</targetport>
      <targethost>ihexds.nist.gov</targethost>
      <interceptors>
        <interceptor id="urlRewriter"
                      name="Simple URL Rewriter" />
      </interceptors>
    </forwarding-rule>


    <forwarding-rule name="v2_rpc"
                      port="9000"
                      blockRequest="false"
                      blockResponse="false"
                      inboundTLS="false"
                      outboundTLS="false"
                      host="localhost"
                      method="*">
      <targetport>8080</targetport>
      <targethost>localhost</targethost>
      <interceptors>
        <interceptor id="urlRewriter"
                      name="Simple URL Rewriter" />
      </interceptors>
    </forwarding-rule>



