  <global>
    <adjustHostHeader>false</adjustHostHeader>
  </global>
  <gui>
    <autotrackexchange>true</autotrackexchange>
    <indentMessage>true</indentMessage>
  </gui>
  <proxy active="false"
          authentication="false">
    <proxy-host />
    <proxy-port>0</proxy-port>
    <proxy-username />
    <proxy-password />
  </proxy>
